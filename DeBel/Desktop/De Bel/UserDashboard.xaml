<Window x:Class="De_Bel.UserDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De_Bel"
        mc:Ignorable="d"
        Title="Dashboard" Height="500" Width="800" ContentRendered="Window_ContentRendered">
    <Grid>
        <local:LogControl x:Name="lcLogControl" Margin="0,0,0,35"/>
        <Button x:Name="btnLogOut" Content="Log out" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="btnLogOut_Click"/>
        <Label x:Name="lblLoggedInAs" Margin="90,0" Height="35" HorizontalContentAlignment="Right" VerticalAlignment="Bottom"/>
        <Button x:Name="btnRefresh" Content="Refresh" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="btnRefresh_Click"/>
    </Grid>
</Window>
