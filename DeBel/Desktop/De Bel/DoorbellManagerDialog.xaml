<Window x:Class="De_Bel.DoorbellManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De_Bel"
        mc:Ignorable="d"
        Title="Doorbell Manager" Height="300" Width="300">
    <Grid>
        <Button x:Name="btnRemove" Content="Remove" IsDefault="True" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75"/>
        <Button Content="Close" IsCancel="True" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <GroupBox Header="" Margin="0,0,0,186">
            <StackPanel>
                <TextBlock TextWrapping="Wrap" Text="Doorbell name:"/>
                <TextBox x:Name="tboxDoorbellName" Height="23" TextWrapping="Wrap" Text=""/>
                <Button x:Name="btnAdd" Content="Add" Width="75"/>
            </StackPanel>
        </GroupBox>
        <ListBox x:Name="lboxDoorbells" Margin="0,88,0,35"/>
    </Grid>
</Window>
